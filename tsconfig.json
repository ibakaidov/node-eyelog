{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "Node16",
    "target": "ES2020",
    "module": "Node16",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "@types/node",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
